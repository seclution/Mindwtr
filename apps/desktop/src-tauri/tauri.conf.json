{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Focus GTD",
  "version": "0.1.5",
  "identifier": "tech.dongdongbh.focus-gtd",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "bun run dev:vite",
    "beforeBuildCommand": "bun run build:vite"
  },
  "app": {
    "windows": [
      {
        "title": "Focus GTD",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "decorations": false,
        "zoomHotkeysEnabled": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "appimage",
      "deb"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}