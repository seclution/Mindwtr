{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Mindwtr",
  "version": "0.5.2",
  "identifier": "tech.dongdongbh.mindwtr",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "bun run dev:vite",
    "beforeBuildCommand": "bun run build:vite"
  },
  "app": {
    "windows": [
      {
        "title": "Mindwtr",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "zoomHotkeysEnabled": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "nsis",
      "appimage",
      "deb",
      "rpm",
      "dmg",
      "app"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "shell": {
      "open": "^((mailto:\\\\w+)|(tel:\\\\w+)|(https?://\\\\w+)|(file:///.+)|(/.+)|([A-Za-z]:\\\\\\\\.+)).*"
    }
  }
}
