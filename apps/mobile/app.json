{
  "expo": {
    "name": "Mindwtr",
    "slug": "mindwtr",
    "version": "0.6.4",
    "orientation": "default",
    "icon": "./assets/images/icon.png",
    "scheme": "mindwtr",
    "userInterfaceStyle": "automatic",
    "jsEngine": "hermes",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "tech.dongdongbh.mindwtr",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "Mindwtr uses the microphone to capture voice notes."
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "versionCode": 23,
      "package": "tech.dongdongbh.mindwtr",
      "permissions": [
        "RECORD_AUDIO",
        "POST_NOTIFICATIONS"
      ],
      "edgeToEdgeEnabled": false,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "./plugins/expo-router",
      "expo-notifications",
      [
        "./plugins/expo-splash-screen",
        {
          "image": "./assets/images/icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      [
        "./plugins/react-native-android-widget",
        {
          "widgets": [
            {
              "name": "TasksWidget",
              "label": "Mindwtr Focus",
              "description": "Today's focus and next actions",
              "minWidth": "160dp",
              "minHeight": "160dp",
              "targetCellWidth": 2,
              "targetCellHeight": 2,
              "resizeMode": "horizontal|vertical",
              "previewImage": "./assets/images/widget-preview.png"
            }
          ]
        }
      ],
      [
        "./plugins/abi-splits",
        {
          "architectures": [
            "arm64-v8a",
            "armeabi-v7a"
          ],
          "enableMinifyInReleaseBuilds": true,
          "enableShrinkResourcesInReleaseBuilds": true,
          "useLegacyPackaging": true
        }
      ],
      [
        "expo-share-intent",
        {
          "androidIntentFilters": [
            "text/*"
          ],
          "disableIOS": true
        }
      ],
      [
        "expo-build-properties",
        {
          "android": {
            "minSdkVersion": 24
          }
        }
      ],
      "expo-secure-store",
      "./plugins/android-manifest-fixes"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "b50c904d-6a26-481c-b9bf-b1e2d57fccad"
      }
    },
    "owner": "dongdongbh"
  }
}
